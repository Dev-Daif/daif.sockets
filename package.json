{
  "name": "daif.sockets",
  "version": "1.0.01",
  "description": "Wrapper for handle websockets and add functionality",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "websocket",
    "sockets",
    "wrapper"
  ],
  "author": "Daif",
  "scripts": {
    "build": "tsc",
    "lint": "eslint ./src --ext .ts",
    "sockets:server": "node ./src/socketsServer.js",
    "test": "jest ./src --config jestconfig.json",
    "test:watch": "jest ./src --config jestconfig.json --watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "publish:private": "npm publish --access private"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^29.6.1",
    "jest-websocket-mock": "^2.4.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "eslintConfig": {
    "extends": [
      ".eslintrc.json"
    ]
  },
  "files": [
    "lib/**/*"
  ]
}